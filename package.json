{
  "name": "@spailybot/moleculer-auto-openapi",
  "version": "1.1.0",
  "description": "Auto generate openapi(swagger) scheme for moleculer",
  "main": "./lib/index.cjs",
  "module": "./lib/index.mjs",
  "types": "./lib/index.d.ts",
  "type": "module",
  "scripts": {
    "prepack": "npm run build",
    "version": "npm run build",
    "preversion": "git update-index --really-refresh && git diff-index --quiet HEAD || (echo git is not clean && exit 1)",
    "postversion": "pnpm run generate-tag",
    "generate-tag": "git commit -am \"bump version of ${npm_package_name} to v${npm_package_version}\" && git tag -a ${npm_package_name}/v${npm_package_version} -m \"${npm_package_name}/v${npm_package_version}\"",
    "ts-types": "tsc --emitDeclarationOnly --outDir lib/types",
    "build": "rimraf lib && node esbuild.mjs && npm run ts-types",
    "jest": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "lint": "eslint -f unix \"src/**\"",
    "lint:fix": "npm lint -- --fix",
    "ci:eslint": "npm run lint -- -f json -o ./coverage/eslint-report.json"
  },
  "exports": {
    ".": {
      "default": "./lib/index.cjs",
      "import": {
        "types": "./lib/index.d.ts",
        "default": "./lib/index.mjs"
      },
      "require": {
        "types": "./lib/index.d.cts",
        "default": "./lib/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/grinat/moleculer-auto-openapi.git"
  },
  "keywords": [
    "openapi",
    "swagger",
    "moleculer"
  ],
  "author": "SpailyBot <contact@sbot.tv>",
  "contributors": ["Gabdrashitov Rinat <paladin2012gnu@gmail.com>"],
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/spailybot/moleculer-auto-openapi/issues"
  },
  "homepage": "https://github.com/spailybot/moleculer-auto-openapi#readme",
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@seriousme/openapi-schema-validator": "^2.1.2",
    "@tsconfig/node-lts": "^18.12.5",
    "@types/node": "^20.8.3",
    "@types/swagger-ui-dist": "^3.30.2",
    "@typescript-eslint/parser": "6.7.4",
    "esbuild": "^0.19.4",
    "eslint": "8.51.0",
    "eslint-config-prettier": "9.0.0",
    "eslint-plugin-prettier": "5.0.0",
    "fastest-validator": "github:thib3113/fastest-validator",
    "jest": "^29.7.0",
    "moleculer": "^0.14.31",
    "moleculer-web": "^0.10.6",
    "openapi-types": "^12.1.3",
    "prettier": "3.0.3",
    "rimraf": "^5.0.5",
    "swagger-ui-dist": "^5",
    "ts-jest": "^29.1.1",
    "typescript": "^5.2.2"
  },
  "peerDependencies": {
    "moleculer": "^0.14.31",
    "swagger-ui-dist": "^5"
  },
  "pnpm": {
    "overrides": {
      "fastest-validator": "github:thib3113/fastest-validator"
    }
  }
}
